pkgname=vidyo
pkgver=3.0.3.018
pkgrel=1
pkgdesc="Desktop client for vidyo conferencing system used at CERN"
url="https://vidyoportal.cern.ch"
license=(commercial)
arch=(i686 x86_64)
makedepends=(rpmextract)
depends=(alsa-lib qt4 libidn)
optdepends=('zenity: Perform checks at start'
'flashplugin: Join meetings via web browser')

if [ "$CARCH" = "i686" ]; then
    _arch=''
    source=("http://information-technology.web.cern.ch/sites/information-technology.web.cern.ch/files/VidyoDesktopInstaller-sl5-TAG_${pkgver//./_}.rpm")
    md5sums=('c6b114dacf52581f43dc4197655dc003')
elif [ "$CARCH" = "x86_64" ]; then
    _arch='64'
    source=("http://information-technology.web.cern.ch/sites/information-technology.web.cern.ch/files/VidyoDesktopInstaller-sl564-TAG_${pkgver//./_}.rpm")
    md5sums=('f0a01f0caedf7d7e60dcb29b5d358e71')
fi

package() {
    cd $pkgdir
    rpmextract.sh $startdir/VidyoDesktopInstaller-sl5${_arch}-TAG_${pkgver//./_}.rpm
}
